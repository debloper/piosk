[Unit]
Description=Launch XiOSK switcher to switch tabs
After=xiosk-runner.service

[Service]
Type=simple
ExecStart=/opt/xiosk/scripts/runtime/switcher.sh
User=PI_USER
WorkingDirectory=PI_HOME
Environment=DISPLAY=:0
Environment=XAUTHORITY=PI_HOME/.Xauthority
Environment=XDG_RUNTIME_DIR=/run/user/PI_SUID
Restart=on-failure

[Install]
WantedBy=graphical.target
