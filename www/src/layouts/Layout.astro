---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "One-shot set up Raspberry Pi in kiosk mode as a webpage shuffler, with a web interface for management." } = Astro.props;

// Get the base path from your astro.config.mjs
const base = import.meta.env.BASE_URL;

// Get current page path for active navigation highlighting
const currentPath = Astro.url.pathname;
console.log("Current Path Is:", currentPath); 
---

